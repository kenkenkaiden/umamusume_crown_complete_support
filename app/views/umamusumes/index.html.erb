<div class="contents row">

  <div class="container text-center">
    <div class="row">
      <div class="col">
      </div>
      <div class="col">

      </div>

      <% if Umamusume.exists? %>
        <%= @umamusumes.each do |umamusume| %>
        <div class="col">
          <div class="card" style="width: 15rem;">
            <%= link_to(image_tag("#{umamusume.name}（公式SNSアイコン）.png", class: "card-img-top", alt: "..."), root_path) %>
            <div class="card-body">
              <h5 class="card-title"><%= umamusume.name %></h5>
              <p class="card-text">ここにトロフィー獲得状況を表示させたい</p>
              <a href="#" class="btn btn-primary">詳細</a>
              <%= button_to "登録解除", umamusume_path(umamusume), method: :delete, class: "btn btn-primary", role: "button" %>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>



</div>