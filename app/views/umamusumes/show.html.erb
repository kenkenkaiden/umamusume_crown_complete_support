<div class="container text-center">
  <div class="row">
    <% @races.each do |race| %>
    <div class="col-md-4">
      <div class="card text-center">
        <%= link_to(image_tag("#{race.name}.png", class: "card-img-top", alt: "..."), root_path) %>
        <div class="card-body">
          <h5 class="card-title"><%= race.name %></h5>
          <p class="card-text">hoge</p>
          <%= button_to "詳細", umamusume_path(race.id), method: :get, class: "btn btn-primary", role: "button" %>
          <%= button_to "登録解除", umamusume_path(race), method: :delete, class: "btn btn-primary", role: "button" %>
        </div>
      </div>
    </div>
    <% end %>
